<h1> Create Account </h1>
<% path = params.has_key?(:pilot) ? users_path(pilot: true) : users_path %>
<%= form_for @user, url: path do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <br> 
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
    <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>
    <% if params[:pilot] %>
        <%= f.label :upload_license %>
        <%= f.file_field :license %>
        <br>
        <% @user.pilot = true %>    
    <% end %>
    <%= f.submit 'Create Account' %>
<% end %>