<%= form_for @ryde do |f| %>
    <%= f.collection_select(:starting_location, Destination.all, :name, :name, {prompt: "Where do you want to go?"}, {include_blank: true, required: true}) %>
    <br>
    <%= f.collection_select(:ending_location, Destination.all, :name, :name, {prompt: "Where are you launching from?"}, {include_blank: true, required: true}) %>
    <br>
    <%= f.submit 'Request Ryde' %>
<% end %>

